<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMatchesListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/tvTeamNameA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Manchester United"
            android:textColor="#555555"
            android:textSize="12sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTeamNameA"
            android:layout_centerInParent="true" >

            <ImageButton
                android:id="@+id/imgBtnTeamLogoA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:background="#00000000" >

                <ImageButton
                    android:id="@+id/imgBtnUserLogoA"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|left"
                    android:background="#00000000" />

                <ImageButton
                    android:id="@+id/imgBtnUserborderA"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|left"
                    android:background="#00000000" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1.5" >

        <TextView
            android:id="@+id/tvBetAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="150"
            android:textColor="#555555"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvBetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBetAmount"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="12sp"
            android:visibility="gone" />

        <!--
             <Button
            android:id="@+id/btnAcceptBet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBetAmount"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_green"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="gone" />
        -->

        <TextView
            android:id="@+id/btnAcceptBet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBetAmount"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/tvTeamNameB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Real Madrid"
            android:textColor="#555555"
            android:textSize="12sp"
            android:gravity="center" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTeamNameB"
            android:layout_centerInParent="true" >

            <ImageButton
                android:id="@+id/imgBtnTeamLogoB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:background="#00000000" >

                <ImageButton
                    android:id="@+id/imgBtnUserLogoB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|left"
                    android:background="#00000000" />

                <ImageButton
                    android:id="@+id/imgBtnUserborderB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|left"
                    android:background="#00000000" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>